# -*- sh -*-

# assumes the "includer" has defined 
#  TOP, SRC and INCLUDES

OBJS=${SRC:%.ml=%.cmo}

all:V: lib.cma
opt:V: lib.cmxa

lib.cma: $OBJS
	$OCAMLC $INCLUDES $prereq -a -o $target
lib.cmxa: ${OBJS:%.cmo=%.cmx}
	$OCAMLOPT $INCLUDES $prereq -a -o $target

clean nuke:V:
	rm -f *.cm[ioxa] *.cmxa *.o *.a  *.annot *.cmt*
	rm -f *~ .*~ *.exe gmon.out

<$TOP/mkcommon
<.depend
